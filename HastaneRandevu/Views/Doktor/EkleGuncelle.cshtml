@model Doktor
@using HastaneRandevu.Utility

<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">@(Model == null? "Doktor Ekle" : "Doktor Guncelle")</h2>
        </div>
        <div class="mb-3">
            <label asp-for="ad" class="p-0">Doktorun Adi: </label>
            <input asp-for="ad" class="form-control" />
            <span asp-validation-for="ad" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="soyad" class="p-0">Doktorun Soyadi: </label>
            <input asp-for="soyad" class="form-control" />
            <span asp-validation-for="soyad" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BolumId" class="p-0">Bolum</label>
            <select asp-for="BolumId" asp-items="ViewBag.Bolum" class="form-select" ></select>
            <span asp-validation-for="BolumId" class="text-danger"></span>
        </div>
        

        @if(Model != null)
        {
            <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Doktor Guncelle</button>
        }
        else
        {    
            <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Doktor Ekle</button>           
        }


        <a asp-controller="Doktor" asp-action="Index" class="btn btn-lg btn-info" style="width:200px">Geri Don</a>
    </div>

</form>